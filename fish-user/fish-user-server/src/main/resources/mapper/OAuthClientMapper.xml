<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--suppress SqlNoDataSourceInspection, SqlResolve -->
<mapper namespace="cn.devifish.cloud.user.server.mapper.OAuthClientMapper">

    <resultMap id="baseResultMap" type="cn.devifish.cloud.common.security.OAuthClient">
        <id column="client_id" property="clientId"/>
        <result column="client_secret" property="clientSecret"/>
    </resultMap>

    <sql id="baseSql">
        `oc`.client_id,
        `oc`.client_secret,
        `oc`.scope
    </sql>

    <select id="findByClientId" resultMap="baseResultMap">
        SELECT
        <include refid="baseSql"/>
        FROM oauth_client AS oc
        <where>
            oc.client_id = #{clientId}
        </where>
    </select>
</mapper>