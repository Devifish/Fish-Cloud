<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--suppress SqlNoDataSourceInspection, SqlResolve -->
<mapper namespace="cn.devifish.cloud.user.server.mapper.UserRoleRelationMapper">

    <resultMap id="baseResultMap" type="cn.devifish.cloud.user.common.entity.UserRoleRelation">
        <id column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <select id="selectUserIdByRoleId" resultType="java.lang.Long">
        SELECT
        urr.user_id
        FROM t_user_role_relation AS urr
        WHERE urr.role_id = #{roleId}
    </select>

    <delete id="deleteByUserId">
        DELETE FROM t_user_role_relation AS urr
        WHERE urr.user_id = #{userId}
    </delete>

    <delete id="deleteByRoleId">
        DELETE FROM t_user_role_relation AS urr
        WHERE urr.role_id = #{roleId}
    </delete>
</mapper>